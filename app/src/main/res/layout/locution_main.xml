<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ajustes_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Menú de configuración (esquina superior izquierda) -->
    <ImageButton
        android:id="@+id/menu_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_menu" />

    <!-- Título de la aplicación -->
    <TextView
        style="@style/Titulo_Aplicacion"
        android:background="#00CDD7F9"
        android:text="AUDIO-HELP"
        android:textColor="@color/primaryText"
        android:textSize="50sp" />

    <!-- Indicador de página -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!-- Puntos de paginación -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/indicator_inactive"
            android:backgroundTint="@color/secondCard" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/indicator_inactive"
            android:backgroundTint="@color/secondCard" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/indicator_active"
            android:backgroundTint="@color/secondaryText" />
    </LinearLayout>

    <!-- Texto "Transcripción" -->
    <TextView
        style="@style/Letra_Normal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:autoText="true"
        android:background="#0049454F"
        android:text="Locución"
        android:textColor="@color/secondaryText" />


    <!-- Botón de transcripción (icono grande en el centro) -->
    <ImageButton
        android:id="@+id/locution_button"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:background="@drawable/boton_circular"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/transcribir_audio_texto"
        android:tint="@color/primaryText" />

    <!-- Opciones inferiores: Llamada de emergencia y Transcripciones guardadas -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Llamada de emergencia -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/emergency_call_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/ic_emergency_call"
                android:tint="@color/primaryText" />

            <TextView
                style="@style/Letra_Pequena"
                android:gravity="center"
                android:text="Llamada\nde Emergencia"
                android:textColor="@color/secondaryText" />
        </LinearLayout>

        <!-- Transcripciones guardadas -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/saved_frases_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/ic_saved_transcriptions"
                android:tint="@color/primaryText" />

            <TextView
                style="@style/Letra_Pequena"
                android:gravity="center"
                android:text="Frases \nGuardadas"
                android:textColor="@color/secondaryText" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnTranscription1"
        android:layout_width="37dp"
        android:layout_height="581dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-4dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/transparent" />

</RelativeLayout>