<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:background="?cardBackgroundColor"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Título de la transcripción -->
    <TextView
        android:id="@+id/transcription_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="@string/transcripcionguardada2"
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp" />

    <!-- Botón de opciones -->
    <ImageButton
        android:id="@+id/btnOpcionesTranscripcion2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Opciones"
        android:scaleType="centerInside"
        android:src="@drawable/eliminar"
        app:tint="?colorOnPrimary" />
</LinearLayout>
