<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Título de la transcripción -->
    <Button
        android:id="@+id/transcription_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:backgroundTint="@color/card_dark"
        android:text="Transcripción 2"
        android:textColor="?android:textColorPrimary" />

    <!-- Botón de opciones -->
    <ImageButton
        android:id="@+id/btnOpcionesTranscripcion2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Opciones"
        android:scaleType="centerInside"
        android:src="@drawable/eliminar"
        app:tint="?colorOnPrimary"
        tools:layout_gravity="center" />

</LinearLayout>
