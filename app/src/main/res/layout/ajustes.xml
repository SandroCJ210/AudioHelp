<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2D3E4F"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_config"
        android:textSize="24sp"
        android:textColor="#AFCFFB"
        android:layout_gravity="start" />

    <!-- Fuente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/font"
            android:textColor="#AFCFFB"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/font_description"
            android:textColor="#87B2E1"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/color_theme"
            android:textColor="#AFCFFB"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/material_theme"
            android:textColor="#87B2E1"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Segundo Plano -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/background_mode"
            android:textColor="#AFCFFB"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/autocorrect"
            android:textColor="#AFCFFB"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Sonido de Voz -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/voice_sound"
            android:textColor="#AFCFFB"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voice_sound_loquendo"
            android:textColor="#87B2E1"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Botón de Guardar Configuración -->
    <Button
        android:id="@+id/button_save"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#333A3F"
        android:text="@string/save_button"
        android:textColor="#FFFFFF" />

    <!-- Pie de página -->
    <TextView
        android:id="@+id/version_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/version_text"
        android:textSize="12sp"
        android:textColor="#AFCFFB"
        android:gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>
