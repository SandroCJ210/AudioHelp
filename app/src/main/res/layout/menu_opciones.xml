<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <!-- Indicador de página -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <!-- Puntos de paginación -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/boton_activo"
            android:backgroundTint="@color/secondaryText" />

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@drawable/boton_activo"
            android:backgroundTint="@color/secondCard" />

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/boton_inactivo"
            android:backgroundTint="@color/secondCard" />
    </LinearLayout>

    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:text="@string/title_options"
        android:textColor="@color/primaryText"
        android:textSize="60sp"
        android:textStyle="bold" />

    <!-- Botón: Iniciar sesión -->
    <LinearLayout
        android:id="@+id/btn_iniciar_sesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/usuario"
            app:tint="@color/primaryText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iniciar_sesion"
            android:textColor="@color/primaryText"
            android:textSize="30sp" />
    </LinearLayout>

    <!-- Botón: Configuración -->
    <LinearLayout
        android:id="@+id/btn_configuracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_iniciar_sesion"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/engranaje"
            app:tint="@color/primaryText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/configuracion"
            android:textColor="@color/primaryText"
            android:textSize="30sp" />
    </LinearLayout>

    <!-- Botón: Tutorial -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_configuracion"
        android:layout_marginBottom="16dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/libro"
            app:tint="@color/primaryText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorial"
            android:textColor="@color/primaryText"
            android:textSize="30sp" />
    </LinearLayout>

    <!-- Versión -->

    <Button
        android:id="@+id/BtnTranscription3"
        android:layout_width="60dp"
        android:layout_height="738dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="-20dp"
        android:background="@android:color/transparent"
        android:textColor="@android:color/transparent"
        android:visibility="visible" />

    <TextView
        android:id="@+id/version"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="30dp"
        android:text="@string/version_text"
        android:textColor="@color/secondaryText"
        android:textSize="14sp" />

</RelativeLayout>
