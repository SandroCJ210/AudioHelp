<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <!-- Título -->
    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar frase"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primaryText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Campo para el Identificador -->
    <EditText
        android:id="@+id/editTextIdentificador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingresar Titulo"
        android:background="#022c87"
        android:padding="12dp"
        android:textColor="@color/primaryText"
        android:textColorHint="@color/secondaryText"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo para el Texto de la Frase -->
    <EditText
        android:id="@+id/editTextFrase"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:hint="Ingresar Texto"
        android:background="#022c87"
        android:padding="12dp"
        android:textColor="@color/primaryText"
        android:textColorHint="@color/secondaryText"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/editTextIdentificador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/botonGuardarFrase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_marginTop="24dp"
        android:backgroundTint="#242526"
        android:textColor="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/editTextFrase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Cancelar -->
    <Button
        android:id="@+id/botonCancelarFrase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_marginTop="16dp"
        android:backgroundTint="#242526"
        android:textColor="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/botonGuardarFrase"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
