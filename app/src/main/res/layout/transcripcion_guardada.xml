<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_caja"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Transcripciones Guardadas"
        android:textColor="#FCF5FD"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Lista de transcripciones -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/fondo_boton"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ejemplo de transcripción con menú de opciones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/fondo_caja"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Título de la transcripción -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transcripción 001: 10:32am 22/11/24"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical" />

                <!-- Botón de opciones -->
                <ImageButton
                    android:id="@+id/btnOpcionesTranscripcion1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/ic_more_option"
                    android:contentDescription="Opciones"
                    android:tint="#000000"
                    android:scaleType="centerInside" />
            </LinearLayout>

            <!-- Repetir este bloque para cada transcripción -->
        </LinearLayout>
    </ScrollView>

    <!-- Botón para agregar nueva transcripción -->
    <Button
        android:id="@+id/btnNuevaTranscripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#225C6E"
        android:text="Nueva Transcripción"
        android:textColor="#FCF5FD" />

    <!-- Pie de página -->
    <TextView
        android:id="@+id/version_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="AUDIO-HELP versión 1.0.1"
        android:textColor="#49454F"
        android:textSize="12sp" />
</LinearLayout>
