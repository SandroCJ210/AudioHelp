<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/iniciosesion_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="34dp">

        <Button
            android:id="@+id/buttonIngresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="75dp"
            android:backgroundTint="@color/card"
            android:text="@string/button_ingresar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonRegistrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="217dp"
            android:backgroundTint="@color/card"
            android:text="@string/button_registrar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewINICIARSESION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="228dp"
            android:layout_marginEnd="116dp"
            android:text="@string/title_login"
            android:textColor="@color/title"
            android:textSize="24sp"
            tools:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textViewEmailoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="296dp"
            android:layout_marginEnd="210dp"
            android:text="@string/e_user"
            android:textColor="@color/primaryText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="148dp"
            android:layout_marginBottom="10dp"
            android:text="@string/version_text"
            android:textColor="@color/secondaryText"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewContrase単a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="386dp"
            android:layout_marginEnd="248dp"
            android:text="@string/Contrase単a"
            android:textColor="@color/primaryText"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="70dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="341dp"
            android:background="#006B7683"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <ImageView
            android:id="@+id/imageViewSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="141dp"
            app:srcCompat="@drawable/usuario"
            app:tint="@color/title" />

        <EditText
            android:id="@+id/editTextContrase単a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="426dp"
            android:layout_marginEnd="85dp"
            android:background="#ffffff"
            android:ems="12"
            android:hint="@string/hint5"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="338dp"
            android:layout_marginEnd="85dp"
            android:background="#ffffff"
            android:ems="12"
            android:hint="@string/hint4"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textViewContrase単aOlvidada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="566dp"
            android:layout_marginEnd="98dp"
            android:text="@string/hint7"
            android:textColor="@color/secondaryText"
            android:textSize="18sp" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>