<resources>
    <!-- Tema Claro -->
    <style name="LightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorOnPrimary">@color/on_background_light</item>
        <item name="colorOnBackground">@color/text_light</item>
        <item name="cardBackgroundColor">#666565</item>

        <!-- Atributos globales -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_light</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:button">@color/button</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:statusBarColor">@color/primary_light</item>
    </style>

    <!-- Tema Oscuro -->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_background_dark</item>
        <item name="colorOnBackground">@color/text_dark</item>
        <item name="cardBackgroundColor">#464646</item>

        <!-- Atributos globales -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>
</resources>
