<resources>
    <!-- Tema claro -->
    <style name="LightTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/background_light</item>
        <item name="android:background">@color/background_light_contenedor</item>
        <item name="android:windowBackground">@color/background_light_contenedor</item>
        <item name="android:textColor">@color/text_light</item>

    </style>
    <!-- Tema oscuro -->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/background_dark</item>
        <item name="android:background">@color/background_dark_contenedor</item>
        <item name="android:windowBackground">@color/background_dark_contenedor</item>
        <item name="android:textColor">@color/text_dark</item>

    </style>

</resources>
